<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, autofocus: true, class: 'form-control p-2' %>
          </div>
          <div class="form-group">
            <%= f.label :body, "Opinion" %><br>
            <%= f.text_area :body , class: 'form-control p-2'%>
          </div>
          <div class="form-group">
            <%= f.submit "Update Book", class: 'btn btn-success' %>
          </div>
        <% end %>
          <p><%= link_to 'Show', "/books/#{@book.id}" %> |
          <%= link_to 'Back', "/books" %></p>
      </div>
    </div>
  </div>
</main>