<main>
  <div class="container">
    <div class="row">
      <%= render 'left', user: @user, book: @newbook %>

      <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td><%= image_tag @user.get_profile_image(80, 80) %><br><%= link_to @user.name, user_path(@user) %></td>
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                <td><%= @book.body %></td>
                <% if @user.id == current_user.id %>
                <td><%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-sm btn-success' %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-sm btn-danger' %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
      </div>
      <p></p>
    </div>
</main>