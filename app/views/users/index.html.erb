<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
              <% if @user.id == current_user.id %>
            </tr>
            <tr>
              <th>inroduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' %></p>
        <% end %>

        <h2>New book</h2>
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <div>
          <div class="form-group mb-3">
            <p class="mb-2">Title</p>
            <%= f.text_field :title, class: 'form-control p-1' %>
          </div>
          <div class="form-group mb-3">
            <p class="mb-2">Opinion</p>
            <%= f.text_area :body, class: 'form-control p-1p-1' %>
          </div>
          <div>
            <%= f.submit 'Create Book', class: 'btn btn-success' %>
          </div>
        </div>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do |user| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %></td>
              <td><%= @user.name %></td>
              <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
</main>