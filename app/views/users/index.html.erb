<main>
  <div class="container">
    <div class="row">
      <%= render 'books/left', user: @user, book: @book %>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', "/users/#{user.id}" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
</main>