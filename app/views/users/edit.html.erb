<main>
  <div class="container">
    <div class="row">
      <div class="coi-lg-5 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label><br>
            <%= f.text_field :name, autofocus: true, id:"inputName", class: 'form-control p-2' %><br>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label><br>
            <%= f.file_field :profile_image, accept: "image/*" %><br>
          </div>
          <div class="form-group">

          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>