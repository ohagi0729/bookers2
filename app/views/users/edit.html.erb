<main>
  <div class="container">
    <div class="row">
      <div class="coi-lg-5 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, class: 'form-control p-2' %>
          </div>
          <div class="form-group">
            <%= f.label :profile_image, "Image" %><br>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, class: 'form-control p-2' %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>